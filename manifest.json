{
  "name": "Synch",
  "description": "Text To Speech for the visually impaired",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": [
    "tts",
    "activeTab",
    "tabs",
    "webNavigation",
    "storage",
    "contextMenus",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "scripting"
  ],

  "declarative_net_request":{
    "rule_resources":[{
    "id":"ruleset_1",
    "enabled":true,
    "path":"rules.json"

  }]

  },
  "action" : {},

  "commands": {
    "paragraphs": {
      "suggested_key": {

        "default": "Ctrl+Shift+P"

      },

      "description":"Reading through Paragraphs"
    },

    "headers":{
          "suggested_key" : {
            "default" : "Ctrl+Shift+H"
          },
          "description" : "Reading through headers"


    },
    "hyperlinks":{
      "suggested_key" : {
        "default" : "Ctrl+Shift+L"
      },
      "description" : "Searching through hyperlinks"

    },

    "hyperlinks results":{
      "suggested_key" : {
        "default" : "Ctrl+Shift+K"
      },
      "description" : "Listing out the results from hyperlinks"

    }
  },





  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  },
  "background":{
    "service_worker": "background.js"



  },
  "icons":{
    "16": "imgs/logo.png",
    "24": "imgs/logo.png",
    "32": "imgs/logo.png"

  },

  "action":{

     "default_title":"Synch Settings",
     "default_popup": "popup.html"


   },

  "content_scripts": [
   {
     "matches": ["<all_urls>"],

     "js": ["app.js" ]
   }
 ]

}
